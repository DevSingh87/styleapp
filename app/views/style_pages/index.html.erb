<h1>Listing style_pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>font_color</th>
      <th>font_style</th>
      <th>font_size</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @style_pages.each do |style_page| %>
      <tr>
        <td><%= style_page.title %></td>
        <td><%= style_page.font_color %></td>
        <td><%= style_page.font_style %></td>
        <td><%= style_page.font_size %></td>
        <td><%= style_page.user %></td>
        <td><%= link_to 'Show', style_page %></td>
        <td><%= link_to 'Edit', edit_style_page_path(style_page) %></td>
        <td><%= link_to 'Destroy', style_page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

