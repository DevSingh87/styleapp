<%= form_for(@style_page, :class=>"form-group") do |f| %>
  <% if @style_page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@style_page.errors.count, "error") %> prohibited this style_page from being saved:</h2>

      <ul>
      <% @style_page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :title, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <label>Font Family</label>
    <% font_family = ['Times New Roman', 'Verdana', 'Lucida Console', 'cursive', 'Gill Sans Extrabold', 'fantasy'] %>
  <%= f.select(:font_family, options_for_select(font_family, :selected=>@style_page.font_family), {:prompt => '--Select Font Family--'}, { :class => 'form-control' }) %>
  </div>
   <div class="form-group">
    <label>Font Color</label>
    <%= f.color_field :font_color, :class=>"form-control" %>
  </div>
   <div class="form-group">
    <label>Font Style</label>
    <% font_style = ['normal','italic','oblique','initial','inherit'] %>
  <%= f.select(:font_style, options_for_select(font_style, :selected=>@style_page.font_style), {:prompt => '--Select Font Style--'}, { :class => 'form-control' }) %>
  </div>
   <div class="form-group">
    <label>Font Size</label>
    <% font_size = ['4px', '8px', '12px', '16px', '20px', '24px', '28px'] %>
    <%= f.select(:font_size, options_for_select(font_size, :selected=>@style_page.font_size), {:prompt => '--Select Font Size--'}, { :class => 'form-control' }) %>
  </div>

  
  <div class="form-group">
    <label>Background Color</label>
    <%= f.color_field :background_color, :class=>"form-control input-small" %>
  </div>
 
 <div class="form-group" style="margin-top: 50px;">
    <%= f.submit "Customize Page", :class=>"btn btn-warning" %>
  </div>
<% end %>


